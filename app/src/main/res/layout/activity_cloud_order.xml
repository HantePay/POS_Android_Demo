<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/jump_to_tcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dip"
        android:text="Hante Cloud" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/merchant_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="merchantNo"
                android:text="1025258896"></EditText>

            <EditText
                android:id="@+id/shop_no_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop no"
                android:text="S1000007"></EditText>
            <EditText
                android:id="@+id/sn_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sn"
                android:text="PN08P0BR20084"></EditText>

            <EditText
                android:id="@+id/apitoken_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Api token"
                android:text="123456"></EditText>

            <EditText
                android:id="@+id/reconnection_order_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="订单号"></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/checkstand_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用卡" />

                <Button
                    android:id="@+id/checkout_counter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:text="收银台" />

            </LinearLayout>


            <TextView
                android:id="@+id/request_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/response_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>